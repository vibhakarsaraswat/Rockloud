<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reloFoldersActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.rockloud.FoldersActivity">

    <ImageView
        android:background="@drawable/blossom"
        android:alpha="0.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/relofolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:orientation="horizontal"
                android:background="#4D82B1FF">

                <ImageView
                    android:id="@+id/imgBangbangFolder"
                    android:src="@drawable/rc_bangbang"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp" />

                <RelativeLayout
                    android:layout_toRightOf="@id/imgBangbangFolder"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/MFParentTextStyle"
                        android:id="@+id/txvBangbangFolder"
                        android:text="@string/folder_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <TextView
                        style="@style/MFChildTextStyle"
                        android:text="@string/folder_songs"
                        android:layout_toRightOf="@id/txvBangbangFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <TextView
                        style="@style/MFChildTextStyle"
                        android:text="@string/folder_location"
                        android:layout_below="@id/txvBangbangFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                </RelativeLayout>

                <ImageView
                    android:src="@drawable/rc_repeat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/leloNowplayingFolders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#4D82B1FF">

        <ImageView
            android:src="@drawable/rc_shotdown"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp" />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MFParentTextStyle"
                android:id="@+id/txvShotDownFolder"
                android:text="@string/song1title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />


            <TextView
                style="@style/MFChildTextStyle"
                android:text="@string/song1singer"
                android:layout_below="@id/txvShotDownFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

        </RelativeLayout>

        <ImageView
            android:src="@drawable/rc_previous"
            android:layout_gravity="center"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="5dp" />

        <ImageView
            android:src="@drawable/rc_play"
            android:layout_gravity="center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp" />

        <ImageView
            android:src="@drawable/rc_next"
            android:layout_gravity="center"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="5dp" />

    </LinearLayout>

</RelativeLayout>
