<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reloScanmediaActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.rockloud.ScanmediaActivity">

    <TextView
        android:id="@+id/txvInfoMsgScanmediaActivity"
        android:text="@string/aim_scanmedia"
        style="@style/MFChildTextStyle"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="@drawable/rc_bg_scanmedia"
        android:layout_below="@id/txvInfoMsgScanmediaActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
